<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>displayCRUD</title>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td,
        th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }

        .btn-edit {
            border-radius: 5px;
            background: orange;
            outline: none;
            border: none;
            color: black;
            cursor: pointer;
        }

        .btn-delete {
            border-radius: 5px;
            background: red;
            outline: none;
            border: none;
            color: black;
            cursor: pointer;
        }
    </style>
</head>

<body>
    <h2>USERS</h2>

    <table>
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>Gender</th>
            <th>RoleID</th>
            <th>Phone Number</th>
            <th>Actions</th>

        </tr>
        <% for(var i=0; i < dataTable.length; i++) { %>
            <tr>
                <td>
                    <%= dataTable[i].id %>
                </td>
                <td>
                    <%= dataTable[i].email %>
                </td>
                <td>
                    <%= dataTable[i].firstName %>
                </td>
                <td>
                    <%= dataTable[i].lastName %>
                </td>
                <td>
                    <%= dataTable[i].address %>
                </td>
                <td>
                    <%= dataTable[i].gender %>
                </td>
                <td>
                    <%= dataTable[i].roleId %>
                </td>
                <td>
                    <%= dataTable[i].phonenumber %>
                </td>
                <td>
                    <a href="/edit-crud?id=<%= dataTable[i].id %>" class="btn-edit" type="button">Edit</a>
                    <a href="/delete-crud?id=<%= dataTable[i].id %>" class="btn-delete"
                        onclick="return confirm('Bạn có chắc muốn xóa người dùng này không?')" type="button">Delete</a>
                </td>
            </tr>
            <% } %>
    </table>

</body>

</html>